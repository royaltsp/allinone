{
  "name": "mern",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "//": "nodemon will restart server on changes",
    "client": "npm run start --prefix client",
    "//": "start npm at different directory i.e.client",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "node1": "nodemon --watch / -e js server.js 5001 http://localhost:5001",
    "node2": "nodemon --watch / -e js server.js 5002 http://localhost:5002",
    "node3": "nodemon --watch / -e js server.js 5003 http://localhost:5003",
    "node4": "nodemon --watch / -e js server.js 5004 http://localhost:5004",
    "node5": "nodemon --watch / -e js server.js 5005 http://localhost:5005",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "device-uuid": "^1.0.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.3",
    "mongoose": "^5.9.2",
    "nodemon": "^1.19.4",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "sha256": "^0.2.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {},
  "keywords": [],
  "description": "My MERN App",
  "proxy": "http://localhost:5000/"
}